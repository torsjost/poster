                Wernersson, L.-E., Samuelson, L., and Xu, H.~Q.
%               \newline
              {\em Nano Lett.}{ \textbf{9}}({9}), 3151 ({2009}).
              \bibitem{wigner1934}
              Wigner, E.
              {\em Phys. Rev.}{ \textbf{46}}, 1002 (1934).
              \end{thebibliography}
            \end{block}
          }
          % ---------------------------------------------------------%
          % end the column
        \end{minipage}
      \end{beamercolorbox}
    \end{column}
